# ========================================
# SOC Simulation Environment Configuration
# ========================================
# Copy this file to .env and update the values
# DO NOT commit .env to version control

# ========================================
# Server Configuration
# ========================================
# Port number for the Express server to listen on
PORT=5000

# Application environment: development, production, or test
# - development: enables detailed error messages and logging
# - production: optimizes performance and security
# - test: used for running automated tests
NODE_ENV=development

# ========================================
# Database Configuration
# ========================================
# MongoDB connection URI
# Format: mongodb://[username:password@]host[:port]/database[?options]
# For MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/soc_system
MONGODB_URI=mongodb://localhost:27017/soc_system

# ========================================
# JWT (JSON Web Token) Configuration
# ========================================
# Secret key for signing JWT tokens
# IMPORTANT: Change this to a strong, random string in production
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_in_production

# JWT token expiration time
# Examples: 1h (1 hour), 7d (7 days), 30d (30 days)
JWT_EXPIRE=7d

# ========================================
# CORS (Cross-Origin Resource Sharing)
# ========================================
# Allowed origin for CORS requests
# Set to your frontend application URL
# For multiple origins, implement custom CORS logic in the server
CORS_ORIGIN=http://localhost:5173

# ========================================
# Rate Limiting
# ========================================
# Time window for rate limiting in minutes
RATE_LIMIT_WINDOW=15

# Maximum number of requests allowed per IP within the time window
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# Socket.io Configuration
# ========================================
# Port for WebSocket connections (real-time updates)
# Should be different from the main server port
SOCKET_PORT=5001

# ========================================
# Optional Configuration
# ========================================
# Uncomment and configure as needed

# Logging level: error, warn, info, debug
# LOG_LEVEL=info

# Session secret for express-session (if using sessions)
# SESSION_SECRET=your_session_secret_here

# Email configuration for notifications (if implemented)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASS=your_email_password
# EMAIL_FROM=noreply@soc-simulation.com

# Redis configuration (if using Redis for caching/sessions)
# REDIS_URL=redis://localhost:6379

# API Keys for external services (if integrated)
# VIRUSTOTAL_API_KEY=your_virustotal_api_key
# ABUSEIPDB_API_KEY=your_abuseipdb_api_key
